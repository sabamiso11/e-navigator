<h1>ようこそ</h1>
<% unless @users.nil? %>
    <table>
        <tr>
            <th>名前</th>
            <th>Email</th>
            <th>年齢</th>
            <th>性別</th>
            <th>学校名</th>
            <th>面接日程</th>
        </tr>
<% @users.each do |user| %>
        <tr>
            <td><%= user.username%></td>
            <td><%= user.email%></td>
            <% if user.birthday != nil %>
            <td><%= (Date.today.strftime("%Y%m%d").to_i - user.birthday.strftime("%Y%m%d").to_i) /10000 %></td>
            <% else %>
            <td></td>
            <% end %>
            <td><%= user.sex %></td>
            <td><%= user.company %></td>
            <% unless user.start_interview.nil? %>
            <td><%= user.start_interview.strftime("%Y年%m月%d日 %H時%M分") %></td>
            <% else %>
            <td></td>
            <% end %>
            <td><%= link_to '面接一覧', user_interviews_path(user) %></td>
        </tr>
<% end %>
    </table>
<% end %>
